{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsNestDomain",
  "title": "Nest Loader Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the loader.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What entity would you like to use for this loader (plural, e.g., \"users\")?"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the loader."
    },
    "sourceRoot": {
      "type": "string",
      "description": "Nest loader source root directory."
    },
    "skipImport": {
      "type": "boolean",
      "description": "Flag to skip the module import.",
      "default": false
    }
  },
  "required": ["name"]
}
